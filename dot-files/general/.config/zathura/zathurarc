

#-| Normal |-#

# hjkl →  mnei
map m scroll left
map n scroll down
map e scroll up
map i scroll right

map N scroll half-down
map E scroll half-up

map k search forward
map K search backward

map l navigate previous
map u navigate next

unmap o
map o toggle_index

# Quit with intent
unmap q
map Q quit



#-| Index |-#

# For TOC navigation
map [index] o toggle_index

# hjkl →  mnei
map [index] n navigate_index down
map [index] e navigate_index up
map [index] m navigate_index collapse
map [index] i navigate_index expand

map [index] N navigate_index collapse-all
map [index] I navigate_index expand-all

unmap [index] q
map [index] Q quit
